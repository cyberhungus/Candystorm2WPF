<Window x:Name="Candystorm_V2" x:Class="Candystorm2WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Candystorm2WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="300" Loaded="Candystorm_V2_Loaded">
    <Grid Background="#FFFFC5C7">
        <Button x:Name="VideoTest" Content="Test Video" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top" Width="300" Height="50" Click="VideoTest_Click"/>
        <Button x:Name="HardwareOn" Content="Test Hardware (on)" HorizontalAlignment="Center" Margin="0,155,0,0" VerticalAlignment="Top" Width="300" Height="50" Click="HardwareOn_Click"/>
        <Button x:Name="HardwareOff" Content="Test Hardware (off)" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="300" Height="50" Click="HardwareOff_Click"/>
        <Label x:Name="Header" Content="Candystorm V2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" FontFamily="CommercialScript BT" FontSize="36" FontWeight="Bold"/>
        <TextBlock x:Name="ArduinoLabel" HorizontalAlignment="Center" Margin="0,51,0,0" Text="TextBlock" VerticalAlignment="Top" Width="280" Height="44" TextWrapping="WrapWithOverflow"/>
    </Grid>



</Window>
